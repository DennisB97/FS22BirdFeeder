<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<vehicle type="birdSeed" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/vehicle.xsd">
    <storeData>
        <name>$l10n_fillType_birdSeed2</name>
        <specs>
            <weight ignore="true"/>
        </specs>
        <image>images/store_birdSeed.dds</image>
        <category>pallets</category>
        <brand>AnimalExperience</brand>
        <price>20</price>
        <lifetime>1000</lifetime>
        <rotation>0</rotation>
        <showInStore>true</showInStore>
        <canBeSold>false</canBeSold>
        <allowLeasing>false</allowLeasing>
        <financeCategory>OTHER</financeCategory>
    </storeData>

    <base>
        <typeDesc>$l10n_typeDesc_birdSeed</typeDesc>
        <filename>models/birdSeed.i3d</filename>
        <size width="1" length="1" height="1" />
        <canBeReset>false</canBeReset>
        <supportsPickUp>true</supportsPickUp>
        <components>
            <component centerOfMass="0 0.028 0" solverIterationCount="10" mass="10"/>
        </components>
        <showInVehicleMenu>false</showInVehicleMenu>
        <mapHotspot available="false" />
        <input allowed="false"/>
    </base>

    <fillUnit>
        <fillUnitConfigurations>
            <fillUnitConfiguration>
                <fillUnits removeVehicleIfEmpty="true">
                    <fillUnit showCapacityInShop="false" unitTextOverride="g" fillTypes="BIRDSEED" capacity="2000" startFillType="BIRDSEED" startFillLevel="2000" ignoreFillLimit="true"/>
                </fillUnits>
            </fillUnitConfiguration>
        </fillUnitConfigurations>
    </fillUnit>

    <customVehicleInfo uiLinesToRemove="2" uiInfoTitle="$l10n_fillType_birdSeed"/>

    <customDischarge customDirectionY="1" bUseCustomDirection="true" />

    <dischargeable requiresTipOcclusionArea="false">
        <dischargeNode node="dischargeNode" emptySpeed="100" fillUnitIndex="1" canStartDischargeAutomatically="true" playSound="false">
           <raycast node="dischargeNode" useWorldNegYDirection="false" maxDistance="1" />
        </dischargeNode>
    </dischargeable>

    <pallet fillUnitIndex="1" node="birdSeed_vis">
        <sounds>
            <unload template="palletsFillBag" pitchScale="0.7" />
        </sounds>
    </pallet>

    <i3dMappings>
        <i3dMapping id="birdSeed" node="0>" />
        <i3dMapping id="birdSeed_vis" node="0>0" />
        <i3dMapping id="dischargeNode" node="0>0|0" />
    </i3dMappings>
</vehicle>
