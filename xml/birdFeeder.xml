<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<placeable type="placeableFeeder" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/placeable.xsd">
    <storeData>
        <name>$l10n_birdFeeder</name>
        <functions>
            <function>$l10n_function_birdFeeder</function>
        </functions>
        <image>images/store_birdFeeder.dds</image>
        <price>500</price>
        <dailyUpkeep>1</dailyUpkeep>
        <lifetime>1000</lifetime>
        <rotation>0</rotation>
        <brand>AnimalExperience</brand>
        <species>placeable</species>
        <category>animals</category>
        <brush>
            <type>placeable</type>
            <category>animals</category>
            <tab>others</tab>
        </brush>
        <vertexBufferMemoryUsage>134656</vertexBufferMemoryUsage>
        <indexBufferMemoryUsage>23296</indexBufferMemoryUsage>
        <textureMemoryUsage>2162688</textureMemoryUsage>
        <audioMemoryUsage>0</audioMemoryUsage>
        <instanceVertexBufferMemoryUsage>0</instanceVertexBufferMemoryUsage>
        <instanceIndexBufferMemoryUsage>0</instanceIndexBufferMemoryUsage>
    </storeData>

    <base>
        <filename>models/birdFeeder.i3d</filename>
        <canBeRenamed>true</canBeRenamed>
    </base>

    <placement useRandomYRotation="false" useManualYRotation="true"  >
        <testAreas>
            <testArea startNode="testArea1Start" endNode="testArea1End" />
        </testAreas>
        <sounds>
            <place template="smallImp" pitchScale="1.6"/>
        </sounds>
    </placement>

    <clearAreas>
        <clearArea startNode="clearArea1Start" widthNode="clearArea1Width" heightNode="clearArea1Height"/>
    </clearAreas>

    <leveling requireLeveling="true" maxSmoothDistance="1" maxSlope="75" maxEdgeAngle="30">
        <levelAreas>
            <levelArea startNode="levelAreaStart" widthNode="levelAreaWidth" heightNode="levelAreaHeight" groundType="grass"/>
        </levelAreas>
    </leveling>

    <placeableFeeder fillPlaneNode="fillPlane" scareTriggerNode="birdScareTrigger">
        <storage fillTypes="BIRDSEED" capacity="1000" isExtension="false" fillLevelSyncThreshold="1">
            <startFillLevel fillType="BIRDSEED" fillLevel="0" />
            <fillPlane fillType="BIRDSEED" node="fillPlane" minY="1.8238" maxY="1.832" changeVisibility="true" />
        </storage>
        <unloadingStation node="unloadingStation" hideFromPricesMenu="true" supportsExtension="false">
            <unloadTrigger exactFillRootNode="unloadTrigger" fillTypes="BIRDSEED"/>
        </unloadingStation>

        <birds eatPosition1="birdEatPosition1" eatPosition2="birdEatPosition2" eatPosition3="birdEatPosition3" maxNumberBirds="3" maxHoursToSpawn="8" maxHoursToLeave="8" flyRadius="40">
            <files xmlFilePath="xml/bird.xml" i3dFilePath="models/bird.i3d" />
        </birds>
    </placeableFeeder>

    <infoTrigger triggerNode="infoTrigger"/>

    <tipOcclusionUpdateAreas>
        <tipOcclusionUpdateArea startNode="tipOcclusionUpdateArea1Start" endNode="tipOcclusionUpdateArea1End" />
    </tipOcclusionUpdateAreas>


    <i3dMappings>
        <i3dMapping id="birdFeeder" node="0>" />
        <i3dMapping id="birdFeeder_vis" node="0>0" />
        <i3dMapping id="birdFeeder_col" node="0>5|0" />
        <i3dMapping id="unloadingStation" node="0>1|2" />
        <i3dMapping id="storage" node="0>1|0" />
        <i3dMapping id="mapPosition" node="0>1|1" />
        <i3dMapping id="teleportPosition" node="0>1|4" />
        <i3dMapping id="fillPlane" node="0>1|5" />
        <i3dMapping id="birdEatPosition1" node="0>1|6|0" />
        <i3dMapping id="birdEatPosition2" node="0>1|6|1" />
        <i3dMapping id="birdEatPosition3" node="0>1|6|2" />
        <i3dMapping id="unloadingStation" node="0>1|2" />
        <i3dMapping id="unloadTrigger" node="0>1|2|0" />
        <i3dMapping id="infoTrigger" node="0>1|3" />
        <i3dMapping id="birdScareTrigger" node="0>1|7" />
        <i3dMapping id="birdsNode" node="0>1|4" />
        <i3dMapping id="clearArea1Start" node="0>2|0" />
        <i3dMapping id="clearArea1Width" node="0>2|0|0" />
        <i3dMapping id="clearArea1Height" node="0>2|0|1" />
        <i3dMapping id="testArea1Start" node="0>3|0" />
        <i3dMapping id="testArea1End" node="0>3|0|0" />
        <i3dMapping id="tipOcclusionUpdateArea1Start" node="0>4|0" />
        <i3dMapping id="tipOcclusionUpdateArea1End" node="0>4|0|0" />
        <i3dMapping id="levelAreaStart" node="0>6|0" />
        <i3dMapping id="levelAreaWidth" node="0>6|1" />
        <i3dMapping id="levelAreaHeight" node="0>6|2" />
    </i3dMappings>
</placeable>
