<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<modDesc descVersion="74">
    <author>Dennis B</author>
    <version>1.0.0.0</version>

    <title>
        <en>Bird Feeder</en>
        <de>Vogelfütterer</de>
    </title>

    <description>
        <en><![CDATA[Decorational bird feeder with feeding functionality and birds.
Full multiplayer support.
Requires FS22_FlyPathfinding mod.
Feeder can be found in the Animals/Others construction tab.
Bird seed can bought from the Pallets menu.
    ]]></en>
        <de><![CDATA[Dekoratives Vogelhäuschen mit Fütterungsfunktion und Vögeln.
Volle Multiplayer-Unterstützung.
Erfordert den FS22_FlyPathfinding-Mod.
Den Futterspender finden Sie auf der Registerkarte „Tiere/Andere Konstruktion“.
Vogelfutter kann im Palettenmenü gekauft werden.
    ]]></de>
    </description>

    <iconFilename>images/icon_birdFeeder.dds</iconFilename>
    <multiplayer supported="true"/>
    <l10n filenamePrefix="translations/l10n"/>

	<dependencies>
		<dependency>FS22_FlyPathfinding</dependency>
	</dependencies>

    <storeItems>
        <storeItem xmlFilename="xml/birdFeeder.xml"/>
        <storeItem xmlFilename="xml/birdSeed.xml"/>
    </storeItems>

    <brands>
        <brand title="Animal Experience" image="images/AnimalExperience.dds" name="AnimalExperience"/>
    </brands>

    <extraSourceFiles>
        <sourceFile filename="scripts/birdFeederMod.lua" />
        <sourceFile filename="scripts/states/birdFeederStates.lua" />
        <sourceFile filename="scripts/states/birdStates.lua" />
        <sourceFile filename="scripts/feederBird.lua" />
        <sourceFile filename="scripts/events/feederInvalidPlacementEvent.lua" />
    </extraSourceFiles>

    <specializations>
        <specialization name="placeableFeeder" className="PlaceableFeeder" filename="scripts/specializations/placeableFeeder.lua"/>
        <specialization name="customVehicleInfo" className="CustomVehicleInfo" filename="scripts/specializations/customVehicleInfo.lua"/>
        <specialization name="customDischarge" className="CustomDischarge" filename="scripts/specializations/customDischarge.lua"/>
    </specializations>

    <vehicleTypes>
        <type name="birdSeed" className="Vehicle" filename="$dataS/scripts/vehicles/Vehicle.lua" >
            <specialization name="fillUnit" />
            <specialization name="fillVolume" />
            <specialization name="fillTriggerVehicle" />
            <specialization name="dischargeable" />
            <specialization name="tensionBeltObject" />
            <specialization name="pallet" />
            <specialization name="customVehicleInfo" />
            <specialization name="customDischarge" />
        </type>
    </vehicleTypes>

    <fillTypes filename="xml/newfilltypes.xml" />

</modDesc>